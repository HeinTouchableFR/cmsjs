datasource db {
  provider = "mysql"
  url      = "mysql://web:Stienforce62!!@nas.aymericlhomme.fr:3306/cmsjs?schema=public"
}

model pages {
  id          Int        @id @default(autoincrement())
  content     String?    @db.LongText
  description String?
  params      String?
  title       String     @db.VarChar(255)
  slug        String     @unique @db.VarChar(191)
  published   DateTime   @default(now())
  updated     DateTime?
  settings    settings[]
}

model menus {
  id    Int     @id @default(autoincrement())
  items String? @db.LongText
  name  String  @db.VarChar(255)
}

model templates {
  id       Int        @id @default(autoincrement())
  content  String?    @db.LongText
  params   String?
  name     String     @db.VarChar(255)
  type     String     @db.VarChar(255)
  Settings settings[]
}

model images {
  id           Int        @id @default(autoincrement())
  url          String     @db.LongText
  originalName String     @db.VarChar(255)
  name         String     @db.VarChar(255)
  size         String     @db.VarChar(255)
  created_at   DateTime   @default(now())
  Settings     settings[]
}

model settings {
  id          Int        @id @default(autoincrement())
  data        String     @unique @db.VarChar(191)
  value       String?    @db.VarChar(255)
  page        pages?     @relation(references: [id], fields: [pagesId])
  template    templates? @relation(references: [id], fields: [templatesId])
  image       images?    @relation(references: [id], fields: [imagesId])
  pagesId     Int?
  templatesId Int?
  imagesId    Int?
}

generator client {
  provider = "prisma-client-js"
}
